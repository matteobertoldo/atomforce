{
  "name": "atomforce",
  "main": "./lib/atomforce",
  "version": "0.13.0",
  "description": "Unofficial Salesforceâ„¢ Commerce Cloud uploader & manager for Atom. Upload your files and cartridges on SFCC via WebDAV.",
  "keywords": [
    "salesforce-commerce-cloud",
    "sfcc",
    "demandware",
    "webdav",
    "cloud",
    "uploader"
  ],
  "author": {
    "name": "Matteo Bertoldo",
    "email": "mrbert93@gmail.com",
    "url": "https://github.com/matteobertoldo"
  },
  "bugs": {
    "url": "https://github.com/matteobertoldo/atomforce/issues"
  },
  "repository": "https://github.com/matteobertoldo/atomforce.git",
  "license": "MIT",
  "engines": {
    "atom": ">=1.21.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "standard-version": "^9.1.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-use-variable": "^1.7.2"
  },
  "dependencies": {
    "atom-package-deps": "^7.0.3",
    "chokidar": "^3.4.3",
    "del": "^6.0.0",
    "etch": "^0.14.1",
    "file-url": "^3.0.0",
    "filesize": "^6.1.0",
    "multimatch": "^4.0.0",
    "request": "^2.88.2",
    "walk": "^2.3.14",
    "yazl": "^2.5.1"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "providedServices": {
    "jsonschema.provider": {
      "versions": {
        "1.0.0": "consumeDwJsonSchemaProvider"
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{less,md,js,json,yml}": "prettier --write",
    "*.js": "eslint --fix",
    "*.less": "stylelint --fix",
    "*.md": "remark --silently-ignore"
  },
  "scripts": {
    "format": "prettier --config .prettierrc --write \"./**/*.{less,md,js,json,yml}\"",
    "lint": "npm run lint:js && npm run lint:less && npm run lint:markdown",
    "lint:fix": "npm run lint:js:fix && npm run lint:less:fix",
    "lint:js": "eslint .",
    "lint:less": "stylelint ./styles",
    "lint:js:fix": "eslint . --fix",
    "lint:less:fix": "stylelint ./styles --fix",
    "lint:markdown": "remark .",
    "parse": "npm run format && npm run lint",
    "release": "standard-version",
    "test": "atom --test spec"
  },
  "package-deps": [
    {
      "name": "language-sfcc"
    },
    {
      "name": "autocomplete-json"
    }
  ]
}
