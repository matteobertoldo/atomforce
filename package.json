{
  "name": "atomforce",
  "main": "./lib/atomforce",
  "version": "0.11.1",
  "description": "Salesforce Commerce Cloud uploader for Atom. Upload your files and cartridges on SFCC via WebDAV.",
  "keywords": [
    "salesforce-commerce-cloud",
    "sfcc",
    "demandware",
    "webdav",
    "cloud",
    "uploader"
  ],
  "author": {
    "name": "Matteo Bertoldo",
    "email": "mbertoldo@walit.it",
    "url": "https://github.com/matteobertoldo"
  },
  "bugs": {
    "url": "https://github.com/matteobertoldo/atomforce/issues"
  },
  "repository": "https://github.com/matteobertoldo/atomforce.git",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0",
    "node": ">=8.0.0"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslit": "^6.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.1",
    "prettier": "^2.0.5",
    "remark-cli": "^8.0.0",
    "remark-lint-no-dead-urls": "^1.0.2",
    "remark-preset-lint-recommended": "^4.0.0",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-use-variable": "^1.7.2"
  },
  "dependencies": {
    "atom-package-deps": "^5.1.0",
    "chokidar": "^3.4.0",
    "del": "^5.1.0",
    "etch": "^0.14.0",
    "file-url": "^3.0.0",
    "filesize": "^6.1.0",
    "multimatch": "^4.0.0",
    "request": "^2.88.2",
    "walk": "^2.3.14",
    "yazl": "^2.5.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "package-deps": [
    "autocomplete-json",
    "language-sfcc"
  ],
  "providedServices": {
    "jsonschema.provider": {
      "versions": {
        "1.0.0": "consumeDwJsonSchemaProvider"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-lint-no-dead-urls"
    ]
  },
  "scripts": {
    "changelog": "github_changelog_generator -u matteobertoldo -p atomforce",
    "format": "prettier --config .prettierrc --write \"./**/*.{less,md,js,json,yml}\"",
    "lint": "npm run lint:js && npm run lint:less && npm run lint:markdown",
    "lint:fix": "npm run lint:js:fix && npm run lint:less:fix",
    "lint:js": "eslint .",
    "lint:less": "stylelint ./styles",
    "lint:js:fix": "eslint . --fix",
    "lint:less:fix": "stylelint ./styles --fix",
    "lint:markdown": "remark .",
    "parse": "npm run format && npm run lint",
    "test": "atom --test spec"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.less": "stylelint --fix"
  }
}
