{
  "name": "atomforce",
  "main": "./lib/atomforce",
  "version": "0.8.0",
  "description": "Salesforce Commerce Cloud (ex Demandware) uploader for Atom. Upload your files and cartridges on SFCC via WebDAV.",
  "keywords": [
    "atom",
    "salesforce",
    "atomforce",
    "demandware",
    "webdav",
    "cloud",
    "uploader"
  ],
  "author": {
    "name": "Matteo Bertoldo",
    "email": "mrbert93@gmail.com",
    "url": "https://github.com/matteobertoldo"
  },
  "bugs": {
    "url": "https://github.com/matteobertoldo/atomforce/issues"
  },
  "repository": "https://github.com/matteobertoldo/atomforce.git",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "activationCommands": {},
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.5",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "dependencies": {
    "chokidar": "^3.1.1",
    "del": "^4.1.1",
    "etch": "^0.14.0",
    "multimatch": "^4.0.0",
    "request": "^2.88.0",
    "walk": "^2.3.14",
    "yazl": "^2.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:less",
    "lint:fix": "npm run lint:js:fix && npm run lint:less:fix",
    "lint:js": "eslint .",
    "lint:less": "stylelint ./styles",
    "lint:js:fix": "eslint . --fix",
    "lint:less:fix": "stylelint ./styles --fix"
  }
}
