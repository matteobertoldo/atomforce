{
    "extends": "stylelint-config-standard",
    "max-nesting-depth": [
        4,
        {
            "ignore": ["blockless-at-rules", "pseudo-classes"]
        }
    ],
    "rules": {
        "indentation": 4,
        "no-descending-specificity": null,
        "selector-no-qualifying-type": true,
        "selector-class-pattern": "^_?[a-z0-9]+(-[a-z0-9]+)*$"
    }
}
